.container {
  width: 100vw;
  height: 858px;
  padding-top: 20px;
  background-color: #ebeced;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .bigbox {
  width: 692rpx;
  background-color: #fff;
}
.container .bigbox .banner {
  width: 692rpx;
  height: 350rpx;
  background-color: #fff;
  border-radius: 10px;
}
.container .bigbox .banner swiper {
  width: 100%;
  height: 100%;
}
.container .bigbox .banner image {
  width: 100%;
  height: 100%;
}
.container .bigbox .choice-container {
  width: 692rpx;
  height: 44px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 14px;
}
.container .bigbox .choice-container .choice {
  color: #cfcfcf;
}
.container .bigbox .choice-container .choice.active {
  color: #57B6E6;
}
.container .ad {
  margin-top: 10px;
  width: 692rpx;
  height: 158px;
}
.container .ad image {
  width: 100%;
  height: 100%;
}
.container .serve-container {
  width: 692rpx;
  height: 63rpx;
}
.container .serve-container .serve-text {
  font-size: 18px;
  font-family: '黑体';
  line-height: 24px;
}
.container .serve-container .serve-choice {
  display: flex;
  flex-direction: row;
  margin-top: 15px;
}
.container .serve-container .serve-choice button {
  width: 177rpx;
  font-size: 14px;
  color: #b3b3b3;
}

