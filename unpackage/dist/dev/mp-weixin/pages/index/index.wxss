.container {
  width: 100vw;
  padding-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .bigbox {
  width: 92.3vw;
  background-color: #fff;
}
.container .bigbox .banner {
  width: 100%;
  height: 187px;
  background-color: #fff;
  border-radius: 10px;
}
.container .bigbox .banner swiper {
  width: 100%;
  height: 100%;
}
.container .bigbox .banner image {
  width: 100%;
  height: 100%;
}
.container .bigbox .choice-container {
  margin-top: 5px;
  width: 92.3vw;
  font-size: 14px;
}
.container .bigbox .choice-container .ullist {
  display: flex;
  flex-direction: row;
}
.container .bigbox .choice-container .ullist .item {
  width: 25%;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #cfcfcf;
}
.container .bigbox .choice-container .ullist .item.active {
  color: #57B6E6;
}
.container .bigbox .choice-container .indexInput-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .bigbox .choice-container .indexInput-box .input {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #EDF2F2;
  width: 81.5vw;
  height: 45px;
  border-radius: 10px;
}
.container .bigbox .choice-container .indexInput-box .input:first-child {
  margin-bottom: 8px;
}
.container .bigbox .choice-container .indexInput-box .input:last-child {
  margin-bottom: 20px;
}
.container .bigbox .choice-container .indexInput-box .input image {
  height: 70rpx;
  width: 70rpx;
  margin-left: 3.85vw;
  margin-right: 18.46vw;
}
.container .bigbox .choice-container .indexInput-box .input .placeholder {
  color: #C9C9C9;
  margin-top: 8rpx;
}
.container .bigbox .choice-container .indexInput-box .input .placeholder text:first-child {
  font-size: 13px;
}
.container .ad {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 92.3vw;
}
.container .ad image:nth-child(2n+1) {
  width: 39.7vw;
  height: 60px;
}
.container .ad image:first-child {
  margin-bottom: 5px;
}
.container .ad image:nth-child(2) {
  margin-bottom: 5px;
}
.container .ad image:nth-child(2n) {
  width: 49.74vw;
  height: 60px;
  margin-left: 2.8vw;
}
.container .ad image:nth-child(3) {
  margin-bottom: 10px;
}
.container .ad image:nth-child(4) {
  margin-bottom: 10px;
}
.container .ad .popup-content {
  width: 65.38vw;
  height: 50.75vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.container .ad .popup-content .pop-ad {
  width: 100%;
  height: 100%;
}
.container .ad-text {
  color: #a6a6a6;
  font-size: 11px;
}
.container .serve-container {
  width: 92.3vw;
  height: 63rpx;
  margin-top: 13px;
}
.container .serve-container .serve-text {
  font-size: 18px;
  font-family: '黑体';
  line-height: 24px;
}
.container .serve-container .serve-choice {
  display: flex;
  flex-direction: row;
  margin-top: 15px;
  justify-content: space-around;
  align-self: center;
}
.container .serve-container .serve-choice button {
  border-color: transparent;
  width: 23.59vw;
  height: 24px;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b3b3b3;
}

